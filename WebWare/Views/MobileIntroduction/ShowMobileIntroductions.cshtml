@model TotalMobileIntroduction
@inject IViewLocalizer Localizer
@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = Localizer["Mobile Games Introduction"];
}


<h2>افزودن معرفی بازی موبایلی</h2>

<div class="container">
    <h2>بازی هایی که تا کنون معرفی بازی برای آنها ثبت نشده است یا غیر فعال می باشند</h2>
    <p>با انتخاب بازی مورد نظر آن را ویرایش و فعال نمایید.</p>
    <table id="example" class="table table-striped table-bordered farsiNumber2" style="width:100%">
        <thead>
            <tr>
                <th>شناسه بازی</th>
                <th>عنوان بازی</th>
                <th>شناسه ورژن</th>
                <th>رده سنی</th>
                <th>پلتفرم</th>
                <th>ویرایش</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Total)
            {
                <tr>
                    <td>@x.gameIdReal</td>
                    <td>@x.gameTitle</td>
                    <td>@x.gameVersionId</td>
                    <td>@x.ageRating</td>
                    <td>@x.platform</td>
                    <td><a href="\MobileIntroduction\EditIntroduction?gameId=@x.gameIdReal"><i class="fa fa-edit "></i></a></td>

                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#example').DataTable({ "order": [] });

        });

    </script>

}

