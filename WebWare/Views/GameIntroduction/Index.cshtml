@model GameIntroductionViewModel
@{
    Layout = "_LayoutDashboard";
}

@{
    ViewData["Title"] = "Game Introductions";
}

@section HeadLinks {
 
}

<h2>معرفی بازی ها</h2>

<div class="container">
    <h2>بازی های دارای معرفی</h2>
    <p>با انتخاب بازی مورد نظر آن را ویرایش نمایید.</p>
    <table id="example" class="table table-striped table-bordered farsiNumber2" style="width:100%">
        <thead>
            <tr>
                <th>عنوان بازی</th>
                <th>رده سنی</th>
                <th>ژانر ها</th>
                <th>پلتفرم</th>
                <th>ویرایش</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.GiGames)
            {
            <tr>
                <td>@x.Name</td>
                <td>@x.AgeRating.ToString()</td>
                <td>@string.Join(",", x.genres.ToArray())</td>
                <td>@x.platform.ToString()</td>
                <td><a href="GameIntroduction\EditIntroduction?gameId=@x.IdGame"><i class="fa fa-edit "></i></a></td>

            </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('#example').DataTable();
        });
        
    </script>

}
